    <camera name="stool_rotation" pos="2.565 -0.099 0.697" xyaxes="0.013 1.000 0.000 -0.061 0.001 0.998"/>
    <camera name="cross_leg" pos="1.983 0.083 1.351" xyaxes="-0.012 1.000 0.000 -0.321 -0.004 0.947"/>
    <camera name="cross_leg_side" pos="0.994 -1.438 0.794" xyaxes="0.722 0.692 0.000 -0.141 0.147 0.979"/>
    <camera name="dc_armchair" pos="0.421 -2.848 1.801" xyaxes="0.999 -0.039 -0.000 0.015 0.370 0.929"/>
