        directional="true" castshadow="true"/>
    <!-- TODO Bring this back: -->
    <body name="torso_target" mocap="true" pos="0 0 2" quat="1 0 0 0">
        <!-- <geom type="sphere" size="0.05" contype="0" conaffinity="0" rgba="0 1 0 .5"/> -->
    </body>
  </worldbody>

  <custom>
    <numeric name="agent_planner" data="0" />
    <numeric name="agent_horizon" data="0.35" />
    <numeric name="agent_timestep" data="0.015" />
    <numeric name="sampling_spline_points" data="3" />
    <numeric name="sampling_exploration" data="0.05" />
    <numeric name="gradient_spline_points" data="5" />
    <text name="task_transition" data="Sit Down|Stand Up|Relax|Stay Still" />
    <text name="contact_transition" data="No Contact|Contact" />
    <numeric name="residual_Head Height" data="1.4 0 2." />             <!--0-->
    <numeric name="residual_Torso Height" data="1.3 0 2." />            <!--1-->
    <numeric name="residual_select_Contact1" data="0"/>                 <!--2-->
    <text name="residual_list_Contact1" data="None|Point1|Point2"/>     
    <numeric name="residual_select_Contact2" data="0"/>                 <!--3-->
    <text name="residual_list_Contact2" data="None|Point1|Point2"/>
    <numeric name="residual_select_Contact3" data="0"/>                 <!--4-->
    <text name="residual_list_Contact3" data="None|Point1|Point2"/>
    <numeric name="residual_select_Contact4" data="0"/>                 <!--5-->
    <text name="residual_list_Contact4" data="None|Point1|Point2"/>
    <numeric name="residual_select_Contact5" data="0"/>                 <!--6-->
    <text name="residual_list_Contact5" data="None|Point1|Point2"/>
    <numeric name="residual_select_Contact Point" data="0"/>            <!--7-->
    <text name="residual_list_Contact Point" data="Facing|1|2|3|4|5"/>
    <numeric name="residual_select_Facing Dir" data="0"/>               <!--8-->
    <text name="residual_list_Facing Dir" data="OFF|ON"/>
    <numeric name="residual_Dist. Tolerance" data="0.1 0. 2."/>          <!--9-->
    <numeric name="residual_Time Limit" data="2. 0 10." />               <!--10-->
    <numeric name="residual_Sustain Time" data="1. 0 5." />              <!--11-->
  </custom>
  
  <sensor>
    <user name="Torso Up" dim="1" user="6 10.0 0.0 100.0 0.1" />
    <user name="Pelvis Up" dim="1" user="6 10.0 0.0 100.0 0.1" />
    <user name="RFoot Up" dim="1" user="6 5.0 0.0 100.0 0.1" />
    <user name="LFoot Up" dim="1" user="6 5.0 0.0 100.0 0.1" />
    <user name="Head Height" dim="1" user="6 0.0 0.0 100.0 0.1" />
    <user name="Torso Height" dim="1" user="6 20.0 0.0 100.0 0.1" />
    <user name="Knee Feet XY" dim="1" user="6 30.0 0.0 100.0 0.1" />
    <user name="COM Feet XY" dim="1" user="6 0.0 0.0 100.0 0.1" />
    <user name="Facing Dir" dim="1" user="6 0.0 0.0 100.0 0.1" />
    <user name="CoM Vel." dim="2" user="0 10.0 0.0 100.0" />
    <user name="Joint Vel." dim="21" user="0 0.01 0.0 10." />
    <user name="Control" dim="21" user="3 .8 0.0 5. 0.05" />
    <user name="Contact" dim="15" user="6 100.0 0.0 100.0 0.1" /> 
    <framepos name="floor" objtype="geom" objname="floor"/>
    <framepos name="trace0" objtype="body" objname="torso"/>
    <framepos name="torso_position" objtype="body" objname="torso"/>
